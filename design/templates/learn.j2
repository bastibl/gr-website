<div class="container-fluid marketing bg_gray">
	<div class="container marketing bg_gray learn_more_padding">

		<div class="row">
			<div class="col-lg-12">
				<h2 class="text-center gr_heading learn_more">
					<strong>Learn About GNU Radio</strong>
				</h2>
			</div>
		</div>

		<div class="row ">
			{% for item in data.learns %}
			<div class="col-lg-4 lag_tile">
				<div class="lag_image">
					<a href="{{ item.link }}" target="_blank">
						<img src="{{ item.image }}" alt="{{ item.image_alt }}" width="{{item.image_width}}">
					</a>
				</div>
				<div class="lag_title">
					<h3>{{ item.title }}</h3>
				</div>
				<div class="lag_body">
					<p>{{ item.subtext }}</p>
				</div>
				<div class="lag_btn">
					<p>
						<a class="btn-tiles btn-tiles-links" href="{{ item.link }}" role="button" target="_blank">
							<span class="grbtnicon"></span> LEARN MORE</a>
						</p>
					</div>
				</div>
				{% endfor %}
			</div>

		</div>
	</div>