{% extends "main.j2" %}

{% block content %}

  {# ================ CAROUSEL ====================== #}

  <div id="myCarousel" class="carousel slide carousel-padding" data-ride="carousel" data-interval="10000">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">

      <div class="carousel-item active">
        <img class="first-slide" src="/assets/imgs/conference_bg_default.jpg" alt="GNU Radio Conference 2018">
        <div class="container">
          <div class="carousel-caption">
            <h1>GNU Radio Conference 2018</h1>
            <p>September 17 - 21, 2018 - Henderson Convention Center, Henderson, Nevada</p>

            <p><a class="btn btn-lg btn-gr" href="/grcon-2018/" role="button" target="_blank">Learn More</a></p>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <img class="second-slide" src="/assets/imgs/fosphor.jpg" alt="Fosphor">
        <div class="container">
          <div class="carousel-caption">
            <h1>GNU Radio is a Free &amp; Open-Source Toolkit for Software Radio</h1>
            <p></p>
            <p><a class="btn btn-lg btn-gr" href="https://wiki.gnuradio.org/index.php/Guided_Tutorials" role="button" target="_blank">GET STARTED</a></p>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <img class="third-slide" src="/assets/imgs/fosphor.jpg" alt="Fosphor">
        <div class="container">
          <div class="carousel-caption">
            <h1>GRCon2018 Call For Everything</h1>
            <p>Submit your awesome talk, workshop or poster board to GRCon!</p>
            <p><a class="btn btn-lg btn-gr" href="/grcon-2018/submit/" target="_blank" role="button">Learn More</a></p>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <img class="third-slide" src="/assets/imgs/fosphor.jpg" alt="Fosphor">
        <div class="container">
          <div class="carousel-caption">
            <h1>GNU Radio Publications</h1>
            <p>Checkout all the papers from past GRCons!</p>
            <p><a class="btn btn-lg btn-gr" href="https://pubs.gnuradio.org" role="button" target="_blank">Learn More</a></p>
          </div>
        </div>
      </div>

    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>


  {# ================ LEARNING ====================== #}

  <div class="container-fluid marketing bg_gray">
    <div class="container marketing bg_gray learn_more_padding">

      <div class="row">
        <div class="col-lg-12">
          <h2 class="text-center gr_heading learn_more">
            <strong>Learn About GNU Radio</strong>
          </h2>
        </div>
      </div>

      <div class="row ">
        
        <div class="col-lg-4 lag_tile">
          <div class="lag_image">
            <a href="https://wiki.gnuradio.org/index.php/Main_Page" target="_blank">
              <img src="/assets/imgs/fullstack_web.svg" alt="GNU Radio Wiki" width="280">
            </a>
          </div>
          <div class="lag_title">
            <h3>From Design to Deployment</h3>
          </div>
          <div class="lag_body">
            <p>With GNU Radio you can simulate, prototype, and deploy, all from the same workflow.</p>
          </div>
          <div class="lag_btn">
            <p>
              <a class="btn-tiles btn-tiles-links" href="https://wiki.gnuradio.org/index.php/Main_Page" role="button" target="_blank">
                <span class="grbtnicon"></span> LEARN MORE</a>
            </p>
          </div>
        </div>
        
        <div class="col-lg-4 lag_tile">
          <div class="lag_image">
            <a href="http://www.cgran.org/" target="_blank">
              <img src="/assets/imgs/cgran_logo_v2_clear_180.png" alt="CGRAN" width="180">
            </a>
          </div>
          <div class="lag_title">
            <h3>Active Community</h3>
          </div>
          <div class="lag_body">
            <p>Leverage a wide selection of existing modules, made available by our community of active developers.</p>
          </div>
          <div class="lag_btn">
            <p>
              <a class="btn-tiles btn-tiles-links" href="http://www.cgran.org/" role="button" target="_blank">
                <span class="grbtnicon"></span> LEARN MORE</a>
            </p>
          </div>
        </div>
        
        <div class="col-lg-4 lag_tile">
          <div class="lag_image">
            <a href="https://wiki.gnuradio.org/index.php/FAQ#Which_license_does_GNU_Radio_use.3F" target="_blank">
              <img src="/assets/imgs/FSF_fixed.svg" alt="Free Software" width="280">
            </a>
          </div>
          <div class="lag_title">
            <h3>Free Software</h3>
          </div>
          <div class="lag_body">
            <p>GNU Radio is Free Software. That means you have the liberty to use and modify it as you wish</p>
          </div>
          <div class="lag_btn">
            <p>
              <a class="btn-tiles btn-tiles-links" href="https://wiki.gnuradio.org/index.php/FAQ#Which_license_does_GNU_Radio_use.3F" role="button" target="_blank">
                <span class="grbtnicon"></span> LEARN MORE</a>
            </p>
          </div>
        </div>
        
      </div>

    </div>
  </div>

