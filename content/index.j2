{% extends "main.j2" %}

{% block content %}

  <div id="myCarousel" class="carousel slide carousel-padding" data-ride="carousel" data-interval="10000">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">

      <div class="carousel-item active">
        <img class="first-slide" src="https://www.gnuradio.org/assets/imgs/conference_bg_default.jpg" alt="GNU Radio Conference 2018">
        <div class="container">
          <div class="carousel-caption">
            <h1>GNU Radio Conference 2018</h1>
            <p>September 17 - 21, 2018 - Henderson Convention Center, Henderson, Nevada</p>

            <p><a class="btn btn-lg btn-gr" href={{ url_for('grcon_view') }} role="button" target="_blank">Learn More</a></p>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <img class="second-slide" src="https://www.gnuradio.org/assets/imgs/fosphor.jpg" alt="Fosphor">
        <div class="container">
          <div class="carousel-caption">
            <h1>GNU Radio is a Free &amp; Open-Source Toolkit for Software Radio</h1>
            <p></p>
            <p><a class="btn btn-lg btn-gr" href="https://wiki.gnuradio.org/index.php/Guided_Tutorials" role="button" target="_blank">GET STARTED</a></p>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <img class="third-slide" src="https://www.gnuradio.org/assets/imgs/fosphor.jpg" alt="Fosphor">
        <div class="container">
          <div class="carousel-caption">
            <h1>GRCon2018 Call For Everything</h1>
            <p>Submit your awesome talk, workshop or poster board to GRCon!</p>
            <p><a class="btn btn-lg btn-gr" href={{ url_for('grcon_submit_view') }} target="_blank" role="button">Learn More</a></p>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <img class="third-slide" src="https://www.gnuradio.org/assets/imgs/fosphor.jpg" alt="Fosphor">
        <div class="container">
          <div class="carousel-caption">
            <h1>GNU Radio Publications</h1>
            <p>Checkout all the papers from past GRCons!</p>
            <p><a class="btn btn-lg btn-gr" href="https://pubs.gnuradio.org" role="button" target="_blank">Learn More</a></p>
          </div>
        </div>
      </div>

    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>



  <div class="container-fluid marketing bg_gray">
    <div class="container marketing bg_gray learn_more_padding">

      <div class="row">
        <div class="col-lg-12">
          <h2 class="text-center gr_heading learn_more">
            <strong>Learn About GNU Radio</strong>
          </h2>
        </div>
      </div>

      <div class="row ">
        {% for item in data.learns %}
          <div class="col-lg-4 lag_tile">
            <div class="lag_image">
              <a href="{{ item.link }}" target="_blank">
                <img src="{{ item.image }}" alt="{{ item.image_alt }}" width="{{item.image_width}}">
              </a>
            </div>
            <div class="lag_title">
              <h3>{{ item.title }}</h3>
            </div>
            <div class="lag_body">
              <p>{{ item.subtext }}</p>
            </div>
            <div class="lag_btn">
              <p>
                <a class="btn-tiles btn-tiles-links" href="{{ item.link }}" role="button" target="_blank">
                  <span class="grbtnicon"></span> LEARN MORE</a>
              </p>
            </div>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>

  <div class="container-fluid marketing latest_news">
    <div class="container marketing latest_news">
      <div class="row">
        <div class="col-lg-12">
          <h2 class="text-center gr_heading"><strong>Latest News</strong></h2>
        </div>
      </div>

      <div class="row">

        {% for row in data.news|sort(attribute='item.date')|reverse %}
          {% if loop.index < 4 %}

            <div class="col-lg-4 news_tile">
              <div class="news_image">
                <a href="{{ url_for('get_new', newstitle=row['item'].full_title) }}">
                  <img src="{{ row['item'].thumbnail }}" alt="{{ row['item'].title }}" width="220">
                </a>
              </div>
              <div class="news_title">
                <h3>{{ row['item'].title }}</h3>
              </div>
              <div class="news_body">
                <p>{{ row['item'].date }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}

      </div>

    </div>
  </div>


  <div class="container-fluid marketing bg_gray">
    <div class="container marketing bg_gray">
      <h2 class="text-center gr_heading learn_more"><strong>Latest Blog</strong></h2>
      {% for row in data.blogs|sort(attribute='item.date')|reverse %}

        {% if loop.index < 4 %}
          {% if loop.index is divisibleby(2)  %}
            <div class="row featurette">
              <div class="col-md-7 order-md-2">

                {% if "external" in row.item.type %}
                  <a href="{{ row['item'].url }}" class="blog_link" target="_blank"><h4 class="featurette-heading">{{ row.item.title }} </h4></a>
                {% else %}
                  <a href="{{ url_for('get_blog', blogtitle=row['item'].full_title) }}" class="blog_link"><h4 class="featurette-heading">{{ row.item.title }} </h4></a>
                {% endif %}
                
                <h5>by {{ row.item.author }}</h5>
                <p class="lead">{{ row.item.description }}</p>
              </div>
              <div class="col-md-5 order-md-1">
                <div class="vc_container">

                  {% if "external" in row.item.type %}
                    <a href="{{ row['item'].url }}"><img class="featurette-image img-fluid mx-auto vc_image" src="{{ row.item.thumbnail }}"" alt="{{ row.item.title }}"></a>
                  {% else %}
                    <a href="{{ url_for('get_blog', blogtitle=row['item'].full_title) }}"><img class="featurette-image img-fluid mx-auto vc_image" src="{{ row.item.thumbnail }}"" alt="{{ row.item.title }}"></a>
                  {% endif %}

                </div>
              </div>
            </div>
            <hr class="featurette-divider">

{% else %}

  <div class="row featurette">
    <div class="col-md-7">
      
      {% if "external" in row.item.type %}
        <a href="{{ row['item'].url }}" class="blog_link" target="_blank"><h4 class="featurette-heading">{{ row.item.title }} </h4></a>
      {% else %}
        <a href="{{ url_for('get_blog', blogtitle=row['item'].full_title) }}" class="blog_link"><h4 class="featurette-heading">{{ row.item.title }} </h4></a>
      {% endif %}

      <h5>by {{ row.item.author }}</h5>
      <p class="lead">{{ row.item.description }}</p>
    </div>
    <div class="col-md-5">
      <div class="vc_container">
        

        {% if "external" in row.item.type %}
          <a href="{{ row['item'].url }}"><img class="featurette-image img-fluid mx-auto vc_image" src="{{ row.item.thumbnail }}"" alt="{{ row.item.title }}"></a>
        {% else %}
          <a href="{{ url_for('get_blog', blogtitle=row['item'].full_title) }}"><img class="featurette-image img-fluid mx-auto vc_image" src="{{ row.item.thumbnail }}"" alt="{{ row.item.title }}"></a>
        {% endif %}

      </div>
    </div>
  </div>
  <hr class="featurette-divider">
{% endif %}

{% endif %}

{% endfor %}
    </div>
  </div>

{% endblock %}
